{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./app/js",
        "moduleResolution": "Node",
        "lib": ["DOM","ESNext"],
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
// !		"build/js/**/*",
        "build/ts/**/*"
    ]
}